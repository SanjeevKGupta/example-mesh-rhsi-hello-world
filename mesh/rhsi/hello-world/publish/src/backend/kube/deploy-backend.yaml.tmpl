apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${K_NAME_BACK}
  labels:
    app: ${K_LABEL_APP_BACK}
spec:
  replicas: ${K_REPLICAS_BACK}
  selector:
    matchLabels:
      app: ${K_LABEL_APP_BACK}
  template:
    metadata:
      labels:
        app: ${K_LABEL_APP_BACK}
    spec:
      containers:
      - image: ${K_DOCKER_IMAGE}_${K_ARCH}:${K_SERVICE_VERSION}
        imagePullPolicy: Always
        name: ${K_IMAGE_NAME_BACK}
        command: ["python", "python/main.py"]
        args: ["--port", "${K_PORT_BACK}"]
      imagePullSecrets:
      - name: ${K_IMAGE_PULL_SECRET_NAME_BACK}
      dnsPolicy: ClusterFirst
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: ${K_LABEL_APP_BACK}
  name: ${K_NAME_BACK}
spec:
  ports:
  - port: ${K_PORT_BACK}
    protocol: TCP
    targetPort: ${K_PORT_BACK}
  selector:
    app: ${K_LABEL_APP_BACk}
  type: ClusterIP